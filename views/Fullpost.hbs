<link rel="stylesheet" href="/css/Post.css">
{{!-- <link rel="stylesheet" href="/css/postAuth.css">
<link rel="stylesheet" href="/css/ex.css"> --}}


{{!-- {{> mobile}} --}}
<div class="main d-flex">
    {{> sidebar}}
    <div class="bg-white container3">
        <div class="wrapperDiv2">
            <div class="Fullpost">
                <div class="fullpost-group">
                    <h2 style="font-weight: bold;">{{post.title}}</h2>
                </div>
                <div class="fullpost-info" style="display: flex; justify-content: space-between;">
                    <div class="fullpost-group flex">
                        <a style="color: black;" href="/public/profile/{{post.user}}">
                            <p style="font-weight: bold;">{{post.author}}</p>
                        </a>
                        <p>Category: {{post.category}}</p>
                        <p><i class=" far fa-eye"></i> {{post.views}}</p>
                        <a href="social/like/{{post._id}}">
                            <p><i class="far fa-thumbs-up"></i>{{post.likes}}</p>
                        </a>
                        <a href="/follow/{{post._id}}">
                            <p>Follow <i class="fas fa-user-plus"></i></p>
                        </a>
                    </div>
                    <div>
                        <img style="height: 40px; width: 40px; border-radius: 50%;" src="{{post.userImage}}"
                            alt="image">
                    </div>
                </div>
                <hr>
                <div id="post-content" class="fullpost-group">
                    {{{post.content}}}
                </div>
            </div>
            <div style="display: none;" id="toggleAnswerDiv">
                <form action="/admin/add/answer" id="add-post-form" method="POST">
                    <div class="form-group">
                        {{!-- <textarea style="height: 200px;" name="content" id="postContent"></textarea> --}}
                        <input type="hidden" value="as" name="hiddenMarkup" id="hiddenMarkup">
                        <input type="hidden" value="{{post._id}}" name="postId">
                        <div id="toolbar">
                            <button type="button" id="bold" onclick="makeBold()">
                                <i class="fas fa-bold"></i></button>
                            <button type="button" id="italic" onclick="makeItalic()">
                                <i class="fas fa-italic"></i>
                            </button>
                            <!-- <button id="underline" onclick="doUnderline()">
    Underline
  </button> -->
                            <button type="button" id="increase" onclick="dopp()">
                                <i class="fas fa-plus"></i>
                            </button>
                            <button type="button" id="decrease" onclick="dop2()">
                                <i class="fas fa-minus"></i>
                            </button>

                            <button type="button" onclick="justifyLeft()"><i class="fas fa-align-left"></i></button>
                            <button type="button" onclick="justifyCenter()"><i class="fas fa-align-center"></i></button>
                            <button type="button" onclick="justifyRight()"><i class="fas fa-align-right"></i></button>

                            <button type="button" onclick="doAddImage()"><i class="far fa-images"></i></button>

                            <button type="button" onclick="doSetTextColor()"><i class="fas fa-brush"></i></button>
                        </div>
                        <div id="editor" contenteditable="true"></div>
                        {{!-- <span id="post-content-error">Message</span> --}}
                    </div>
                    <div class="form-group">
                        <button type="submit">Add Answer</button>
                    </div>
                </form>
            </div>
            <div>
                <hr>
                <div class="add-answer">
                    {{!-- <a href="/admin/add/answer/{{post._id}}">Add Answer</a> --}}
                    <button id="toggleAnswer" type="button">Add Answer</button>
                </div>
                <p style="margin-top: 20px;">Answers</p>
                <hr>
                {{#each answers}}
                <div class="post-answer" style="display: flex; justify-content: start;">
                    <div style="display: flex; flex-direction: column; margin-right: 20px;">
                        <img style="height: 40px; width: 40px; border-radius: 50%;" src="{{this.userImage}}"
                            alt="image">
                        <p>{{this.author}}</p>
                    </div>
                    <div>
                        {{{this.content}}}
                    </div>

                </div>
                <hr>
                {{/each}}
            </div>
            <div>
            </div>
        </div>
        {{> recommend}}
    </div>
</div>


<script src="/js/validate/validators.js"></script>
<script src="/js/validate/addPost.js"></script>
<script src="/js/rich/rich.js"></script>